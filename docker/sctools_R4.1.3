FROM rocker/verse:4.1.3

RUN R -e "install.packages('Seurat')"

RUN R -e "BiocManager::install(c('GenomeInfoDb', 'EnsDb.Hsapiens.v86', 'Signac'))"

RUN R -e "install.packages('devtools')"

RUN R -e "BiocManager::install('SingleCellExperiment')"

RUN R -e "remotes::install_github('immunogenomics/harmony')"

RUN apt-get update && apt-get install -y \
	libhdf5-dev

RUN R -e "install.packages('hdf5r')"

RUN R -e "BiocManager::install(c('biovizBase','BSgenome.Hsapiens.UCSC.hg38','plyranges'))"

RUN R -e "install.packages(c('openxlsx','ggdendro'))"

RUN \
	cd /opt && \
	git clone https://github.com/colomemaria/epiAneufinder
	
RUN R -e "remotes::install_github('chris-mcginnis-ucsf/DoubletFinder')"
